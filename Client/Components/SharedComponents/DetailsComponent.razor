<div class="container-fluid px-2 ">
	<div class="row">
		<div class="col-12  px-2 py-2">
					<div class="align-items-start">
						<div class="flex-grow-1">
							<div class="container card  rounded customshadow  d-flex justify-content-center p-4">
								<div class="row">
									<div class="col-12">
										<div class="alert alert-primary d-flex justify-content-center align-items-center bg-color" role="alert">
											<h4 class="text-white mb-0">
												<span class="title bg-color" id="textCard" style="color: #ffffff; font-size: 24px; font-weight: bold;">
													@localizer["Details"] -  @FormTitle
												</span>
											</h4>
										</div>
									</div>
								</div>
								<div>
									<div class="row mt-3">
										<div class="col-6">
											<button type="button" @onclick="BackToList" class="btn btn-primary btn-sm">@localizer["BackTo"]</button>
										</div>
									</div>
									@ChildContent
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>


@code {
	[Parameter]
	public EventCallback BackToList { get; set; }
	[Parameter]
	public RenderFragment ChildContent { get; set; }
	[Parameter] 
	public string FormTitle { get; set; }
}
